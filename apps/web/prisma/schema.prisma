generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Secret {
  id          String         @id @default(cuid())
  content     String
  iv          String
  password    String?
  passwordIv  String?
  expiryTime  DateTime
  createdAt   DateTime       @default(now())
  history     SecretHistory[]
}

model SecretHistory {
  id        String   @id @default(cuid())
  content   String
  iv        String
  createdAt DateTime @default(now())
  secret    Secret   @relation(fields: [secretId], references: [id], onDelete: Cascade)
  secretId  String
}